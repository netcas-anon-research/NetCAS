<?xml version="1.0"?>
<parameters>
	
    <!-- Connection details -->
	<dbtype>mysql</dbtype>
	<driver>com.mysql.cj.jdbc.Driver</driver>
	<DBUrl><![CDATA[
	jdbc:mysql://localhost:3306/tpcc?useSSL=false&allowPublicKeyRetrieval=true&rewriteBatchedStatements=true
	]]></DBUrl>
	<username>tpcc</username>
	<password>tpcc</password>
	<isolation>TRANSACTION_READ_COMMITTED</isolation>

    <!-- Scale factor is the number of warehouses in TPCC -->
    <scalefactor>5</scalefactor>
    
    <!-- The workload -->
    <terminals>16</terminals>
    <works>
        <work>
          <time>60</time>
          <rate>unlimited</rate>
          <weights>0,0,0,0,100</weights>
        </work>
	</works>

	<!-- TPCC specific -->  	
   	<transactiontypes>
    	<transactiontype>
    		<name>NewOrder</name>
    	</transactiontype>
    	<transactiontype>
    		<name>Payment</name>
    	</transactiontype>
    	<transactiontype>
    		<name>OrderStatus</name>
    	</transactiontype>
    	<transactiontype>
    		<name>Delivery</name>
    	</transactiontype>
    	<transactiontype>
    		<name>StockLevel</name>
    	</transactiontype>
   	</transactiontypes>	
</parameters>
